<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4F7FC2" />
        </shape>
    </item>
    <item android:bottom="1dp"  android:top="1dp" >
        // add android:right="5dp" and android:left="5dp" for border on left and right
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="50%"
                android:startColor="#FF0C4C87"
                android:centerColor="#4F7FC2"
                android:endColor="#FF0D4F8B"
                android:angle="0"/>
        </shape>
    </item>
</layer-list>

