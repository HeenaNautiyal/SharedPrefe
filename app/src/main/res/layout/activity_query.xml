<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/default_ipadback"
    android:orientation="vertical"
    android:id="@+id/lay1"
    android:weightSum="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/graphic"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/ed_lastName"
            android:textColor="#000000"
            android:singleLine="true"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:layout_weight=".05"
            android:paddingLeft="4dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView2"
            android:textSize="15dp"
            android:layout_marginTop="44dp"
            android:paddingTop="12dp"
            android:paddingLeft="1dp"
            android:layout_weight=".5"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/ed_firstName"
            android:textColor="#000000"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:paddingLeft="4dp"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_alignStart="@+id/ed_lastName"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ed_lastName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="First Name:"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:paddingLeft="1dp"
            android:layout_weight=".05"
            android:paddingTop="20dp"
            android:layout_below="@+id/ed_lastName" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/ed_email"
            android:singleLine="true"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:paddingLeft="4dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:layout_alignLeft="@+id/ed_firstName"
            android:layout_alignStart="@+id/ed_firstName"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ed_firstName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Name:"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView4"
            android:textSize="15dp"
            android:paddingLeft="1dp"
            android:layout_weight=".05"
            android:paddingTop="20dp"
            android:layout_below="@+id/ed_firstName" />
        <EditText
            android:inputType="textMultiLine"
            android:lines="8"
            android:id="@+id/ed_Query"
            android:minLines="6"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:gravity="top|left"
            android:maxLines="10"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:scrollbars="vertical"
            android:textSize="15dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Query:"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView5"
            android:textSize="15dp"
            android:paddingLeft="1dp"
            android:layout_weight=".05"
            android:paddingTop="20dp"
            android:layout_below="@+id/ed_email" />
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:id="@+id/btn_Submit"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:textAllCaps="false"
            android:background="@drawable/gradient3"
            android:layout_below="@+id/ed_Query"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_weight=".8"/>

    </RelativeLayout>

</ScrollView>