<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_ipadback"
    android:orientation="vertical"
    android:id="@+id/lay1"
    >   
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:background="@drawable/graphic"
        android:layout_weight="1">

        <EditText
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/ed_lastName"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:paddingLeft="4dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:layout_weight=".4"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FirstName"
            android:textSize="15sp"
            android:layout_marginTop="42dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:layout_marginLeft="2dp"/>


        <EditText
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/ed_firstName"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:singleLine="true"
            android:paddingLeft="4dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:imeOptions="actionNext"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_alignStart="@+id/ed_lastName"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ed_lastName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Last Name"
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:layout_weight=".05"
            android:paddingTop="2dp"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:shadowDy="4"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:shadowRadius="6"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignTop="@+id/ed_firstName" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/ed_username"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:paddingLeft="4dp"
            android:layout_weight=".4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ed_firstName"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_alignStart="@+id/ed_lastName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Name"
            android:id="@+id/textView4"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingTop="17dp"
            android:layout_weight=".05"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_above="@+id/ed_email"
            android:layout_alignTop="@+id/ed_username" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/ed_email"
            android:singleLine="true"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:layout_weight=".4"
            android:paddingLeft="4dp"
            android:imeOptions="actionNext"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ed_username"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_alignStart="@+id/ed_lastName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView5"
            android:textSize="15dp"
            android:paddingLeft="4dp"
            android:layout_weight=".05"
            android:layout_marginTop="20dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="@+id/textView4"
            android:layout_alignParentStart="@+id/textView4"
            android:layout_above="@+id/ed_password" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/ed_password"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:layout_weight=".4"
            android:imeOptions="actionNext"
            android:layout_below="@+id/ed_email"
            android:layout_marginTop="10dp"
            android:paddingLeft="4dp"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_alignStart="@+id/ed_lastName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:shadowRadius="6"
            android:id="@+id/textView6"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:layout_weight=".05"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="@+id/textView4"
            android:layout_alignParentStart="@+id/textView4"
            android:paddingTop="4dp"
            android:layout_below="@+id/textView5"
            />
        <EditText
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/ed_confirmpass"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:layout_weight=".4"
            android:paddingLeft="4dp"
            android:layout_below="@+id/ed_password"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/ed_lastName" />
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Confirm\nPassword"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView7"
            android:textSize="15dp"
            android:paddingLeft="4dp"
            android:layout_marginLeft="2dp"
            android:layout_weight=".08"
            android:paddingTop="10dp"
            android:gravity="left"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />
        <EditText
            android:layout_width="140dp"
            android:layout_marginTop="10dp"
            android:layout_height="35dp"
            android:id="@+id/ed_age"
            android:editable="false"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingLeft="4dp"
            android:layout_weight=".04"
            android:layout_below="@+id/ed_confirmpass"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_alignStart="@+id/ed_lastName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Age 18+"
            android:paddingTop="8dp"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView8"
            android:textSize="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="@+id/textView4"
            android:layout_alignParentStart="@+id/textView4"
            android:paddingLeft="5dp"
            android:layout_weight=".05"
            android:layout_below="@+id/textView7"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:id="@+id/ed_country"
            android:textColor="#000000"
            android:background="@drawable/edittexts"
            android:textSize="15dp"
            android:singleLine="true"
            android:layout_weight=".4"
            android:imeOptions="actionNext"
            android:paddingLeft="4dp"
            android:layout_below="@+id/ed_age"
            android:layout_alignLeft="@+id/ed_lastName"
            android:layout_alignStart="@+id/ed_lastName" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Country"
            android:id="@+id/textView9"
            android:textSize="15dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"

            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:layout_marginLeft="2dp"
            android:layout_alignTop="@+id/ed_country"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:ellipsize="end"
            android:id="@+id/btn_Submit"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/gradient3"
            android:layout_below="@+id/ed_country"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            />

    </RelativeLayout>


</ScrollView>