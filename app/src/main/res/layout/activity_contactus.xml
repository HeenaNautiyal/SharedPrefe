<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_ipadback"
    android:orientation="horizontal"
    android:id="@+id/lay1"

    >

       
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:padding="14dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout"
        android:background="@drawable/circle1"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="info@rituchopra.com"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:id="@+id/textVie"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="9dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginLeft="48dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView2"
            android:textSize="22dp"
            android:paddingTop="18dp"
            android:layout_weight=".5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ed_firstName"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textSize="20dp"
            android:shadowRadius="6"
            android:paddingTop="6dp"
            android:text="www.rituchopra.com"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/textVie"
            android:layout_alignStart="@+id/textVie"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/textVie"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Website:"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textStyle="bold"
            android:shadowRadius="6"
            android:id="@+id/textView3"
            android:textSize="22dp"
            android:paddingLeft="0dp"
            android:layout_weight=".05"
            android:paddingTop="10dp"
            android:layout_below="@+id/textVie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



</LinearLayout>